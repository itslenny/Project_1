</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <a class="navbar-brand" href="/"><img src="/images/grapes.png">Grpvne</a>
      <% if(user){ %>
          <form class="navbar-form navbar-left w1-search-form" role="search" action="/results/" method="get">
            <div class="form-group">
              <input type="text" name="q" class="form-control" placeholder="Search for stories...">
            </div>
            <button type="submit" class="btn btn-default btn-success">Go!</button>
          </form>
          <% }else{ %>
          <div>
          </div>
          <% } %>
      </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
      <ul class="nav navbar-nav navbar-right">
        <% if(user){ %>
          <li><a href="/profile">Hello, <%= user.firstName %>.</a></li>
          <li><a href="/auth/logout">Log Out</a></li>
        <% } else { %>
          <li><a href="/auth/login">Log In</a></li>
        <% } %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

