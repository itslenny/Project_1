<% include ../partials/header %>

<div class="row container">

  <!-- Left side of page -->
  <div class="major-pub col-md-5 col-md-offset-1">
    <div class="table-responsive">
      <table class="table">
        <% redditResults.forEach(function(value,i){ %>
        <tr>
          <td class="reddit-news">
            <label class="pull-right domain-name"><%= redditResults[i].data.domain %></label>
            <br>
            <a class="reddit-article" href="<%= value.data.url %>" data-toggle="modal"><%= redditResults[i].data.title %></a>
            <br>
            <label class="reddit-score"><%= redditResults[i].data.score %>  </label> <i id="score" class="glyphicon glyphicon-thumbs-up"></i>
              <small class="article-comments pull-right"><a href="#"><i class="glyphicon glyphicon-comment"></i>  <em>Leave a comment</em></a></small>
          </td>
        </tr>
        <% }); %>
      </table>
    </div>
  </div>

  <!-- right side of page -->
  <div id="pic-column" class="col-md-5 col-md-offset-1">
    <!-- row for photo feed -->
    <div id="pic-row" class="row">
    <% pics.forEach(function(value,i){ %>
      <div class="insta-div">
        <!-- <a href="#" class="thumbnail"> -->
          <p class="insta-user"><a class="name-link" href="https://www.instagram.com/<%= pics[i].user.username %>"><%= pics[i].user.username %></a></p>
          <a href="<%= pics[i].link %>"><img class="insta-pic" src="<%= pics[i].images.thumbnail.url %>"></a>
          <p><small class="insta-likes pull-right"><%= pics[i].likes.count %>  <i class="glyphicon glyphicon-star"></i></small></p>
        </a>
      </div>
    <% }); %>
    </div>
  </div>

  <div id="tweet-column" class="col-md-5 col-md-offset-1">
    <div class="row">
      <div class="table-responsive">
        <table id="tweet-table" class="table">
          <% tweetRes.forEach(function(tweet,i){ %>
          <tr>
            <td class="tweet-retrieved">
              <img class="avatar" src="<%= tweet.user.profile_image_url_https %>">
              <label class="twitter-user">  <strong><a href="https://www.twitter.com/<%= tweet.user.screen_name %>"><%= tweet.user.name %></a></strong>
                <br><small class="user-tag">@<%= tweet.user.screen_name %></small>
              </label>
              <p class="twitter"><%= tweet.text %></p>
              <p class="fav-retweet"><i class="glyphicon glyphicon-retweet"></i>  <%= tweet.retweet_count %> <strong>|</strong> <i class="glyphicon glyphicon-star"></i>  <%= tweet.favorite_count %>
              <small class="date pull-right"><%= tweet.created_at %></small></p>
            </td>
          </tr>
          <% }); %>
        </table>
      </div>
    </div>
  </div>

</div>

<% include ../partials/footer %>