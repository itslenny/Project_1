<% include ../partials/header %>

<div class="col-md-4 col-md-offset-4 log">
  <h4 class="login-title">Log In</h4>
  <div class="body">
    <form class="form" method="post" action="/auth/login">
      <div class="form-group">
        <label for="email-log">Email address</label>
        <input type="email" class="form-control" id="email-log" placeholder="" name="logMail">
      </div>
      <div class="form-group">
        <label for="password-log">Password</label>
        <input type="password" class="form-control" id="password-log" placeholder="" name="logPass">
        <hr>
        <button type="submit" class="btn btn-success">Log In</button>
        <a class="btn btn-danger pull-right" href="/auth/register">Don't have an account?</a>
      </div>
    </form>
  </div>
</div>

<% include ../partials/footer %>